* {
    border: none;
    border-radius: 0;
    font-family: JetBrains Mono ;
    font-weight: bold;
    font-size: 18px;
    min-height: 0;
}

window#waybar {
    background: #0A0909;
    color: #cdd6f4;
	opacity: 0.8;
	padding:10px 0;
}





tooltip {
    background: #0A0909;
    border-radius: 10px;
    border-width: 2px;
    border-style: solid;
	border:none;
    border-color: #11111b;
}

#workspace button {
    padding: 5px;
    color: #313244;
    margin-right: 5px;
	background: #0A0909;
	border:none;
}

#workspace button.active {
    color: #a6adc8;
	border:none;
}

#workspace button.focused {
    color: #a6adc8;
    background: #0A0909;
    border-radius: 10px;
	border:none;
}

#workspace button.urgent {
    color: #11111b;
    background: #a6e3a1;
    border-radius: 10px;
	border:none;
}

#workspace button:hover {
    background: #11111b;
    color: #cdd6f4;
    border-radius: 10px;
	border:none;
}

#custom-power_profile,
#custom-weather,
#window,
#clock,
#battery,
#pulseaudio,
#network,
#bluetooth,
#temperature,
#workspace,
#tray,
#backlight{ 
	 background: #0A0909;
    opacity: 0.8;
    padding: 0px 10px;
    margin: 5px 0px;
   	border:none;
}

#temperature {
    border-radius: 10px 0px 0px 10px;
}

#temperature.critical {
    color: #eba0ac;
}

#backlight {
    border-radius: 10px 0px 0px 10px;
}

#tray {
    border-radius: 10px;
    margin-right: 10px;
}

#workspace {
    background: #0A0909;
    border-radius: 10px;
    margin-left: 10px;
    padding-right: 10px;
    padding-left: 10px;
border:none;
}

#custom-power_profile {
    color: #a6e3a1;
    border-left: 0px;
    border-right: 0px;
}

#window {
    border-radius: 10px;
    margin-left: 60px;
    margin-right: 60px;
}

#clock {
    color: white;
    border-radius: 10px 10px 10px 10px;
    margin-left: 10px;
    border-right: 0px;
	border:none;
}

#network {
    color: white;
    border-radius: 10px 0px 0px 10px;
    border-left: 10px;
    border-right: 0px;
}

#bluetooth {
    color: white;
    border-radius: 0px 10px 10px 0px;
    margin-right: 10px;
} 

#pulseaudio {
    color: #89b4fa;
    border-left: 0px;
    border-right: 0px;
    border-radius: 10px 0px 0px 10px;
	border:none;
	padding:8px;
}

#pulseaudio.microphone {
    color: #cba6f7;
    border-left: 0px;
    border-right: 0px;
    border-radius: 0px 10px 10px 0px;
    margin-right: 10px;
}

#battery {
    color: #a6e3a1;
    border-radius: 0 10px 10px 0;
    margin-right: 10px;
    border-left: 0px;
}

#custom-weather {
    border-radius: 0px 10px 10px 0px;
    border-right: 0px;
    margin-left: 0px;
}
